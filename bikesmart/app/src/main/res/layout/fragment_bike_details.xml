<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/bg_coffee"
    android:clickable="true"
    tools:context="treadsetters.bikesmart.BikeDetailsFragment" >


    <TextView
        android:id="@+id/bike_name"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:text="Bike Details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/description"
        android:text="Description: Unavailable"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/last_used"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/owner"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="30"
        android:layout_gravity="center_horizontal"
        tools:layout="@android:layout/activity_list_item"/>

    <TextView
        android:id="@+id/current_location"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:text="Current Location: Unavailable" />

    <TextView
        android:id="@+id/distance_traveled"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:text="Distance Traveled: Unavailable" />


</LinearLayout>

